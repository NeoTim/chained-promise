{
  "name": "chained-promise",
  "version": "0.2.4",
  "description": "Functional programming tools for recurring promises",
  "main": "dist/src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/google/chained-promise.git"
  },
  "files": [
    "dist/src/*",
    "src/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "travis": "jest",
    "posttravis": "yarn coveralls",
    "doc": "typedoc --out docs/ src/"
  },
  "authors": [
    "In-Ho Yi <yiinho@google.com>"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^21.1.4",
    "coveralls": "^2.11.6",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.3",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "roots": [
      "src",
      "test"
    ],
    "testRegex": "test/.*\\.ts",
    "moduleDirectories": [
      "node_modules",
      "."
    ],
    "mapCoverage": true,
    "collectCoverage": true
  }
}
